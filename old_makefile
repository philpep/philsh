CC=gcc
CFLAGS=-W -Wall -ansi
LDFLAGS=-lreadline
SRC= ${wildcard src/*.c src/int/*.c}
OBJ= ${SRC:.c=.o}
EXEC=philsh


all: ${EXEC}

philsh: ${OBJ}
	${CC} -o $@ $^ ${LDFLAGS}

src/shell.o: src/shell.h src/int/internal.h

src/int/cd.o: src/int/internal.h

src/int/pwd.o: src/int/internal.h

src/prompt.o: src/int/internal.h

src/ls.o: src/int/ls.h

%.o: %.c
	${CC} -o $@ -c $< ${CFLAGS}

.PHONY: clean mrproper

clean:
	rm -f src/*.o
	rm -f src/int/*.o

mrproper: clean
	rm -f ${EXEC}
